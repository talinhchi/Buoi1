<div class="container mt-5">
    <h2>Edit User</h2>
    <form action="/api/editUser/<%= data.user.username %>" method="POST">
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                value="<%= data.user.username %>"
                required
            />
        </div>
        
        <div class="mb-3">
            <label for="fullname" class="form-label">Full Name</label>
            <input
                type="text"
                class="form-control"
                id="fullname"
                name="fullname"
                value="<%= data.user.fullname %>"
                required
            />
        </div>
        <div class="mb-3">
            <label for="address" class="form-label">Address</label>
            <input
                type="text"
                class="form-control"
                id="address"
                name="address"
                value="<%= data.user.address %>"
                required
            />
        </div>
        <div class="mb-3">
            <label for="sex" class="form-label">Sex</label>
            <select class="form-select" id="sex" name="sex" required>
                <option value="">Select</option>
                <option value="0" <%= data.user.sex === 0 ? 'selected' : '' %>>Male</option>
                <option value="1" <%= data.user.sex === 1 ? 'selected' : '' %>>Female</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= data.user.email %>"
                required
            />
        </div>
        <input type="hidden" name="usernameEdit" value="<%= data.user.username %>" />
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
